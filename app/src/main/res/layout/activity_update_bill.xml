    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/bill_name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:textSize="18dp"
            android:text="名称"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <EditText
            android:id="@+id/bill_name"
            style="@style/EditText.Normal"
            android:textSize="15dp"
            android:layout_height="36dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/bill_money"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_width="23dp"
            android:layout_height="23dp"/>
        <TextView
            android:textSize="18dp"
            android:text="金额"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <EditText
            android:id="@+id/bill_money"
            style="@style/EditText.Normal"
            android:textSize="15dp"
            android:layout_height="36dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/bill_time"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:textSize="18dp"
            android:text="日期"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            style="@style/RoundButton.Auto"
            android:id="@+id/bill_time"
            android:layout_height="36dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="选择日期" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/bill_category"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_width="23dp"
            android:layout_height="23dp"/>
        <TextView
            android:textSize="18dp"
            android:text="类别"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp">
            <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
                android:id="@+id/spinner_category"
                style="@style/Material.SpinnerStyle"
                android:layout_height="36dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/bill_account"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:textSize="18dp"
            android:text="账户"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp">
            <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
                android:id="@+id/spinner_account"
                style="@style/Material.SpinnerStyle"
                android:layout_height="36dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                />

        </LinearLayout>
    </LinearLayout>

    <com.xuexiang.xui.widget.textview.supertextview.SuperButton
        android:id="@+id/btn_save"
        style="@style/SuperButton.Primary.Login"
        android:layout_marginTop="16dp"
        android:text="保 存" />






</LinearLayout>
