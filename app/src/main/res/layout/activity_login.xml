<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.myapplication.LoginActivity">

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="手机号:"
        android:textSize="20dp"
        android:id="@+id/phone_text"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_phonenum"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_weight="0"/>

    <EditText
        android:inputType="phone"
        android:id="@+id/et_phonenum"
        android:layout_weight="1"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/phone_text"
        app:layout_constraintStart_toEndOf="@id/phone_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="70dp"
        android:id="@+id/pass_text"
        android:layout_height="wrap_content"
        android:text="密   码:"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/phone_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_key"
        android:layout_weight="0"/>

    <EditText
        android:inputType="phone"
        android:id="@+id/et_key"
        android:layout_weight="1"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@id/pass_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pass_text"
        android:layout_height="wrap_content"
        />
    <Button
        android:background="@color/colorAccent"
        android:id="@+id/btn_sure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pass_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="#131313"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录" />
    <Button
        android:background="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_sure"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btn_register"
        android:layout_marginTop="20dp"
        android:textColor="#131313"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册" />
    <Button
        android:background="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_register"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btn_find"
        android:layout_marginTop="20dp"
        android:textColor="#131313"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="找回密码" />


</androidx.constraintlayout.widget.ConstraintLayout>